# Database
DATABASE_URL=postgresql://user:password@localhost:5432/conversation_analyzer

# Storage paths
AUDIO_STORAGE_PATH=/data/audio
CHROMADB_PATH=/data/chromadb

# API Keys
OPENAI_API_KEY=sk-...
PYANNOTE_API_KEY=...
REPLICATE_API_TOKEN=...

# Default providers (can be overridden per request)
DEFAULT_DIARIZATION_PROVIDER=pyannote
DEFAULT_TRANSCRIPTION_PROVIDER=openai_whisper

# Supported languages: en, he, es
DEFAULT_LANGUAGE=en

# App settings
DEBUG=false
LOG_LEVEL=INFO

# S3 Storage (Tigris)
S3_ENDPOINT=https://your-s3-endpoint.com
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=your-region

# Google Drive
GOOGLE_API_KEY=
GDRIVE_MAX_FILE_SIZE_MB=500
GDRIVE_MAX_CONCURRENT=3
